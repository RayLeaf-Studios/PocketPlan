                android:paddingStart="20dp"
                android:paddingVertical="15dp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
