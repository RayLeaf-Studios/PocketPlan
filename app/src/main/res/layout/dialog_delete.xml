<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackground"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingBottom="20dp"

    >

    <TextView
        android:id="@+id/tvSwipeToDelete"
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/swipe_right"
        android:textSize="@dimen/font_size_medium"
        android:textColor="?attr/colorOnBackGround"
        app:layout_constraintTop_toTopOf="parent"
        >

    </TextView>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:id="@+id/sbDelete"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSwipeToDelete"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/btnCancelDelete"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_accent"
        android:text="@string/noteDeleteDialogCancel"
        android:textColor="?attr/colorOnBackGroundTask"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbDelete" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_gray"
        android:text="@string/noteDeleteDialogDelete"
        android:textColor="?attr/colorHint"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbDelete" />

</androidx.constraintlayout.widget.ConstraintLayout>
