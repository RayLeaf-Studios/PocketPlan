<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tvOneCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/show_month_for_every_birthday"
                    android:textColor="?attr/colorOnBackGround"
                    android:textSize="@dimen/font_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/swShowMonth"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_birthdays_month_addition"
                    android:textColor="?attr/colorHint"
                    app:layout_constraintStart_toStartOf="@id/tvOneCategory"
                    app:layout_constraintTop_toBottomOf="@id/tvOneCategory" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swShowMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvOneCategory" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingVertical="15dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tvNorth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/month_colors_for_southern_hemisphere"
                    android:textColor="?attr/colorOnBackGround"
                    android:textSize="@dimen/font_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/swSouthColors"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shows_warmer_colors_from_october_to_march"
                    android:textColor="?attr/colorHint"
                    app:layout_constraintStart_toStartOf="@id/tvNorth"
                    app:layout_constraintTop_toBottomOf="@id/tvNorth" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swSouthColors"
                    app:layout_constraintTop_toTopOf="@id/tvNorth"
                    app:layout_constraintBottom_toBottomOf="@id/tvNorth"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingVertical="15dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tvPreview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/show_next_upcoming_birthday_in_home_panel"
                    android:textColor="?attr/colorOnBackGround"
                    android:textSize="@dimen/font_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/swPreview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swPreview"
                    app:layout_constraintTop_toTopOf="@id/tvPreview"
                    app:layout_constraintBottom_toBottomOf="@id/tvPreview"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cvBirthdayTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="20dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tvBirthdayTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/change_birthday_notification_time"
                    android:textColor="?attr/colorOnBackGround"
                    android:textSize="@dimen/font_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBirthdayNotifTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:20"
                    android:textColor="?attr/colorHint"
                    app:layout_constraintStart_toStartOf="@id/tvBirthdayTime"
                    app:layout_constraintTop_toBottomOf="@id/tvBirthdayTime" />


            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
