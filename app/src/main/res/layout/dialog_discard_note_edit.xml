<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackground"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingBottom="20dp">

    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dc_round_corner_accent"
        android:elevation="@dimen/btnElevation"
        android:text="@string/noteDiscardDialogSave"
        android:textColor="?attr/colorOnBackGroundTask"
        android:textSize="@dimen/font_size_medium"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/btnDiscardChanges"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDiscardChanges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dc_round_corner_red"
        android:elevation="@dimen/btnElevation"
        android:text="@string/noteDiscardDialogDiscard"
        android:textColor="?attr/colorOnBackGroundTask"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveChanges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
