<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragments.DayFragment">


    <Button
        android:id="@+id/btnPreviousDay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="&lt;"
        android:textSize="20sp"
        android:background="@drawable/line_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNextDay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/line_white"
        android:text="&gt;"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDayViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mo 12.3"
        android:textSize="20sp"
        android:textColor="@color/colorOnBackGround"
        app:layout_constraintBottom_toBottomOf="@+id/btnPreviousDay"
        app:layout_constraintEnd_toStartOf="@+id/btnPreviousDay"
        app:layout_constraintStart_toEndOf="@+id/btnNextDay"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recylcer_view_day"
        android:layout_width="match_parent"
        android:layout_height="551dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPreviousDay"
        tools:layout_editor_absoluteX="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddTermDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>