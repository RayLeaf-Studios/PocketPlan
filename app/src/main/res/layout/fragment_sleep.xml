<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="5dp"
    tools:context=".fragments.SleepFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvEnableSleepReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Enable Reminder"
            android:textColor="@color/colorOnBackGround"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Switch
            android:id="@+id/switchEnableReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/dividerBelowEnableSwitch"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        tools:layout_editor_absoluteX="5dp" />
    <View
        android:id="@+id/dividerBelowSwitchCustom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/panelCustomSwitch"
        tools:layout_editor_absoluteX="5dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panelCustomSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dividerBelowEnableSwitch"
        tools:layout_editor_absoluteX="4dp">

        <TextView
            android:id="@+id/tvEnableCustomDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Enable Custom Days"
            android:textColor="@color/colorOnBackGround"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Switch
            android:id="@+id/switchEnableCustomDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  <!-- non custom starts here -->
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/panelNotCustom"
         app:layout_constraintTop_toBottomOf="@id/panelCustomSwitch">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/panelWakeTime"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="?attr/selectableItemBackground"
             android:clickable="true"
             android:focusable="true"
             android:padding="10dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent">

             <TextView
                 android:id="@+id/tvWakeTimePanel"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Wakeup time"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="20sp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent" />

             <TextView
                 android:id="@+id/tvWakeTime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="10:35"
                 android:textColor="@color/colorHint"
                 android:textSize="17sp"

                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/tvWakeTimePanel" />

         </androidx.constraintlayout.widget.ConstraintLayout>

         <View
             android:id="@+id/dividerBelowWakeTime"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="?android:attr/listDivider"
             app:layout_constraintBottom_toBottomOf="@+id/panelWakeTime"
             tools:layout_editor_absoluteX="5dp" />

         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/panelSleepDuration"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10dp"
             app:layout_constraintTop_toBottomOf="@+id/dividerBelowWakeTime"
             tools:layout_editor_absoluteX="5dp"
             android:focusable="true"
             android:clickable="true"
             android:background="?attr/selectableItemBackground">

             <TextView
                 android:id="@+id/tvSleepDurationPanel"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sleep duration"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="20sp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent" />

             <TextView
                 android:id="@+id/tvSleepDuration"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="10:35"
                 android:textColor="@color/colorHint"
                 android:textSize="17sp"

                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/tvSleepDurationPanel" />
         </androidx.constraintlayout.widget.ConstraintLayout>

         <View
             android:id="@+id/dividerBelowSleepDuration"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="?android:attr/listDivider"
             app:layout_constraintBottom_toBottomOf="@+id/panelSleepDuration"
             tools:layout_editor_absoluteX="5dp" />

         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/panelCheckboxes"
             android:layout_width="match_parent"
             android:paddingTop="20dp"
             android:layout_height="wrap_content"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/panelSleepDuration">
             <CheckBox
                 android:id="@+id/cbMonday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/cbTuesday"
                 app:layout_constraintEnd_toStartOf="@+id/cbTuesday"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintStart_toStartOf="parent" />

             <CheckBox
                 android:id="@+id/cbTuesday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/cbWednsday"
                 app:layout_constraintEnd_toStartOf="@+id/cbWednsday"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintStart_toEndOf="@+id/cbMonday" />

             <CheckBox
                 android:id="@+id/cbWednsday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/cbThursday"
                 app:layout_constraintEnd_toStartOf="@+id/cbThursday"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintStart_toEndOf="@+id/cbTuesday" />

             <CheckBox
                 android:id="@+id/cbThursday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/cbFriday"
                 app:layout_constraintEnd_toStartOf="@+id/cbFriday"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintStart_toEndOf="@+id/cbWednsday" />

             <CheckBox
                 android:id="@+id/cbFriday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/cbSaturday"
                 app:layout_constraintEnd_toStartOf="@+id/cbSaturday"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintStart_toEndOf="@+id/cbThursday" />

             <CheckBox
                 android:id="@+id/cbSaturday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/cbSunday"
                 app:layout_constraintEnd_toStartOf="@+id/cbSunday"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintStart_toEndOf="@+id/cbFriday" />

             <CheckBox
                 android:id="@+id/cbSunday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/panelCheckboxes"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintStart_toEndOf="@+id/cbSaturday"
                 app:layout_constraintTop_toTopOf="parent" />
             <TextView
                 android:id="@+id/tvMonday"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Mon"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="@dimen/font_size_daysofweek"
                 app:layout_constraintBottom_toTopOf="@+id/cbMonday"
                 app:layout_constraintEnd_toEndOf="@+id/cbMonday"
                 app:layout_constraintStart_toStartOf="@+id/cbMonday" />

             <TextView
                 android:id="@+id/textView11"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Thu"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="@dimen/font_size_daysofweek"
                 app:layout_constraintBottom_toBottomOf="@+id/textView12"
                 app:layout_constraintEnd_toEndOf="@+id/cbThursday"
                 app:layout_constraintStart_toStartOf="@+id/cbThursday" />

             <TextView
                 android:id="@+id/textView9"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Fri"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="@dimen/font_size_daysofweek"
                 app:layout_constraintBottom_toBottomOf="@+id/textView11"
                 app:layout_constraintEnd_toEndOf="@+id/cbFriday"
                 app:layout_constraintStart_toStartOf="@+id/cbFriday" />

             <TextView
                 android:id="@+id/textView8"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sat"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="@dimen/font_size_daysofweek"
                 app:layout_constraintBottom_toBottomOf="@+id/textView9"
                 app:layout_constraintEnd_toEndOf="@+id/cbSaturday"
                 app:layout_constraintStart_toStartOf="@+id/cbSaturday" />

             <TextView
                 android:id="@+id/textView16"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sun"
                 android:textColor="@color/colorOnBackGround"

                 android:textSize="@dimen/font_size_daysofweek"
                 app:layout_constraintBottom_toBottomOf="@+id/textView8"
                 app:layout_constraintEnd_toEndOf="@+id/cbSunday"
                 app:layout_constraintStart_toStartOf="@+id/cbSunday" />

             <TextView
                 android:id="@+id/textView12"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Wed"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="@dimen/font_size_daysofweek"
                 app:layout_constraintBottom_toBottomOf="@+id/textView10"
                 app:layout_constraintEnd_toEndOf="@+id/cbWednsday"
                 app:layout_constraintStart_toStartOf="@+id/cbWednsday" />

             <TextView
                 android:id="@+id/textView10"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Tue"
                 android:textColor="@color/colorOnBackGround"
                 android:textSize="@dimen/font_size_daysofweek"
                 app:layout_constraintBottom_toBottomOf="@+id/tvMonday"
                 app:layout_constraintEnd_toEndOf="@+id/cbTuesday"
                 app:layout_constraintStart_toStartOf="@+id/cbTuesday" />
         </androidx.constraintlayout.widget.ConstraintLayout>

         <View
             android:id="@+id/dividerBelowCheckboxes"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="?android:attr/listDivider"
             app:layout_constraintTop_toBottomOf="@+id/panelCheckboxes"
             tools:layout_editor_absoluteX="4dp" />


     </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- non custom ends here -->

    <!-- custom starts here -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panelCustom"
        app:layout_constraintTop_toBottomOf="@id/panelNotCustom">
        <!-- Monday starts here -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/customMondayPanel"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Monday"
                android:textColor="@color/colorOnBackGround"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_action_sun"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvWakeTimeMo"
                app:layout_constraintEnd_toStartOf="@+id/tvWakeTimeMo" />


            <TextView
                android:id="@+id/tvWakeTimeMo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:text="10:30"
                android:textColor="@color/colorHint"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_duration"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvSDurMo"
                app:layout_constraintEnd_toStartOf="@+id/tvSDurMo" />
            <TextView
                android:id="@+id/tvSDurMo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8h 00 min"
                android:textColor="@color/colorHint"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="47dp"
            app:layout_constraintBottom_toBottomOf="@id/customMondayPanel"
            />

        <!-- Monday ends here -->

        <!-- Tuesday starts here -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/customTuesdayPanel"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/customMondayPanel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tuesday"
                android:textColor="@color/colorOnBackGround"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/icWaketu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_action_sun"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvWakeTimeTu"
                app:layout_constraintEnd_toStartOf="@+id/tvWakeTimeTu" />

            <TextView
                android:id="@+id/tvWakeTimeTu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:text="10:30"
                android:textColor="@color/colorHint"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@id/icDurTu"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icDurTu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_duration"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvSDurTu"
                app:layout_constraintEnd_toStartOf="@+id/tvSDurTu" />
            <TextView
                android:id="@+id/tvSDurTu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8h 00 min"
                android:textColor="@color/colorHint"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/dividerTu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="47dp"
            app:layout_constraintBottom_toBottomOf="@id/customTuesdayPanel"
            />
        <!-- Tuesday ends here -->


        <!-- Wednesday starts here -->
        <!-- Wednesday ends here -->
        <!-- Thursday starts here -->
        <!-- Thursday ends here -->
        <!-- Friday starts here -->
        <!-- Friday ends here -->
        <!-- Saturday starts here -->
        <!-- Saturday ends here -->
        <!-- Sunday starts here -->
        <!-- Sunday ends here -->





    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- custom ends here -->



</androidx.constraintlayout.widget.ConstraintLayout>