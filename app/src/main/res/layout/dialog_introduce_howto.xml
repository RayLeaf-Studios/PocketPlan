<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackground"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvIntroduceText"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?attr/colorOnBackGround"
        android:text="@string/generalHowToDialogHint"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnNotNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_corner_red"
        android:elevation="@dimen/btnElevation"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        android:text="@string/noteDeleteDialogCancel"
        android:textColor="?attr/colorOnBackGroundTask"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnShowMe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIntroduceText" />

    <Button
        android:id="@+id/btnShowMe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_corner_accent"
        android:elevation="@dimen/btnElevation"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/generalShowHowTo"
        android:textColor="?attr/colorOnBackGroundTask"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnNotNow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIntroduceText"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>
