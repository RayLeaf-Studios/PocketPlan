<!--        <item name="android:yearListSelectorColor">@color/colorAccent</item>-->
<!--        <item name="android:calendarTextColor">@color/colorAccent</item>-->
<!--        <item name="android:calendarViewShown">@color/colorAccent</item>-->
    </style>

    <style name="MyTimePickerDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    <style name="MyTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/colorAccent</item>
        <item name="android:numbersSelectorColor">@color/colorAccent</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/colorHint</item>
    </style>

